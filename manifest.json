{
  "name": "Fix Case",
  "version": "1.15",
  "manifest_version": 2,
  "description": "Change case according to chosen option",
  "icons": {
				"48": "i48.ico"
			},
  "permissions": [ "tabs", "http://*/*", "https://*/*", "contextMenus" ],
  "background": { "page": "background.html" },
  "commands": {
  "to-sentence-case": {
    "suggested_key": {
      "default": "Ctrl+Shift+S",
      "mac": "Command+Shift+S"
    },
    "description": "To sentence case"
    },
  "to-title-case": {
    "suggested_key": {
      "default": "Ctrl+Shift+T",
      "mac": "Command+Shift+T"
    },
    "description": "To Title Case"
    },
  "bulletize": {
    "suggested_key": {
      "default": "Ctrl+Shift+B",
      "mac": "Command+Shift+B"
    },
    "description": "Bulletize"
    } 
  },
  "content_scripts": [ {
      "all_frames": true,
      "js": [ "content.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
   } ]
}